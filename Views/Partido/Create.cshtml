@model AppTyV.Partido
@{
    ViewData["Title"] = "Create";
    string today = DateTime.Today.ToString("yyyy-MM-dd");
}

<h1>Crea tu partido!</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Lugar" class="control-label"></label>
                <input asp-for="Lugar" class="form-control" placeholder="Direccion del partido" />
                <span asp-validation-for="Lugar" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fecha" class="control-label"></label>
                <input asp-for="Fecha" class="form-control" type="date" min="@today" placeholder="Fecha del partido" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hora" class="control-label"></label>
                <input asp-for="Hora" type="time" class="form-control" value="12:00" />
                <span asp-validation-for="Hora" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalJugadores" class="control-label"></label>
                <select asp-for="TotalJugadores" class="form-control">
                    <option value="" disabled selected>Cantidad de jugadores</option>
                    <option value="10">10</option>
                    <option value="12">12</option>
                    <option value="14">14</option>
                    <option value="18">18</option>
                    <option value="22">22</option>
                </select>
                <span asp-validation-for="TotalJugadores" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tipo" class="control-label"></label>
                <select asp-for="Tipo" class="form-control" asp-items="Html.GetEnumSelectList<Tipo>()">
                    <option selected="selected" value="">Tipo de jugadores</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Estado" class="control-label"></label>
                <select asp-for="Estado" class="form-control" asp-items="Html.GetEnumSelectList<Estado>()">
                    <option selected="selected" value="">Estado de jugadores</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear partido" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Vuelve a la lista de partidos</a>
</div>


